  body {
    font-family: 'Fira Sans', sans-serif;
    font-weight: 300;
  }

h1, h2, h3, h4, h5 {
  font-weight: 400;
}  

.theme-container {
  font-family: 'Fira Sans', sans-serif;

  a:hover {
    color: $accentColorhover;
  }

  strong {
    font-weight: 500;
  }

  .navbar {
    background-color:#333333;
    border-color: #333333;
    color: white;
  }

  .navbar .links {
    background-color:#333333;
    color: white;
    }

  .navbar .nav-link {
    border-bottom: 0px!important;
    color: white!important;
    }

  .navbar .router-link-active  .router-link-exact-active {
    color:$accentColor!important;
    }

  .sidebar .nav-links {
    padding: 4rem 0rem;
  }


  .hero{
    img {
      width: 100%;
      object-fit: cover;
    }
  }
  .home {
    padding: 0px;
